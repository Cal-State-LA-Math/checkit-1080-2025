    <intro>
            <p>
                Find an equation for each line represented below.
            </p>
        </intro>
        <knowl>
            <content>
                <p>
                The line with a slope of <m>{{slope3}}</m> and passing through the point <m>{{point3}}.</m>
                <!-- integer points, but fractional slope is fine -->
                </p>
            </content>
            <outtro>
                <p><m>{\large Answer}</m></p>
                <p>
                    <m>{{line3_si}}</m> or <m>{{line3_ps}}</m>
                    <!-- using si for slope-intercept and ps for point-slope -->
                </p>
            </outtro> 
        </knowl>

        <knowl>
            <content>
                <p>
                The line through the points <m>{{point4_1}}</m> and <m>{{point4_2}}</m>. 
                <!-- integer points, but fractional slope is fine -->
                </p>
            </content>
            <outtro>
                <p><m>{\large Answer}</m></p>
                <p>
                    <m>{{line4_si}}</m> or <m>{{line4_ps}}</m>
                    <!-- using si for slope-intercept and ps for point-slope -->
                </p>
            </outtro> 
        </knowl>

      
</knowl>